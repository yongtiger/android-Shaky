<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/shaky_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/shakySelectBackgroundColor"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/shaky_toolbar"
        android:theme="?attr/shakyToolbarTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shaky_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:overScrollMode="never"
        android:paddingTop="@dimen/shaky_content_top_padding"
        android:scrollbars="none"/>

</LinearLayout>